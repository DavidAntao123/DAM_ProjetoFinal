<?xml version="1.0" encoding="utf-8"?>

<!--
Ecrã responsável por mostrar os horários de uma sala.
Botões para selecionar horário e limpar tabela
Tabela scrollável com cabeçalho (gerado no Kotlin)
Botão Voltar
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza_fundo"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título do ecrã -->
    <TextView
        android:id="@+id/txtTituloHorarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="Horários"
        android:textColor="@color/verde_principal"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Cartão dos botões -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBotoesHorarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <!-- Botão: Horário 1 -->
            <Button
                android:id="@+id/btnHorario1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/verde_secundario"
                android:text="@string/horario_1ano"
                android:textColor="@color/branco"
                android:textStyle="bold" />

            <!-- Botão: Horário 2 -->
            <Button
                android:id="@+id/btnHorario2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/verde_secundario"
                android:text="@string/horario_3ano"
                android:textColor="@color/branco"
                android:textStyle="bold" />

            <!-- Botão: Limpar tabela -->
            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/verde_secundario"
                android:text="Limpar"
                android:textColor="@color/branco"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Cartão da tabela -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTabela"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:layout_weight="1"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <!-- Tabela preenchida no Kotlin -->
                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*" />

            </ScrollView>

        </HorizontalScrollView>

    </androidx.cardview.widget.CardView>

    <!-- Botão Voltar-->
    <Button
        android:id="@+id/btnVoltarHorario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/verde_principal"
        android:text="@string/voltarHorario"
        android:textColor="@color/branco"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_secundario">

    <!-- TÍTULO -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sobre a Aplicação"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/branco"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- CARTÃO CURSO -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCurso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Licenciatura em Engenharia Informática\n\nDesenvolvimento de Aplicações Móveis\nAno Letivo: 2025/2026"
            android:textSize="16sp"
            android:textColor="#333333"
            android:padding="16dp"/>
    </androidx.cardview.widget.CardView>

    <!-- CARTÃO AUTORES -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAutores"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/cardCurso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Autores\n\n25977 – David F. Antão\n14055 – Joana Alves"
            android:textSize="16sp"
            android:textColor="#333333"
            android:padding="16dp"/>
    </androidx.cardview.widget.CardView>

    <!-- NOME DA APP -->
    <TextView
        android:id="@+id/txtApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplicação Leitura de Horários por QR Code"
        android:textSize="14sp"
        android:textColor="@color/branco"
        app:layout_constraintTop_toBottomOf="@id/cardAutores"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@color/roxo"
        android:textColor="@color/branco"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>

